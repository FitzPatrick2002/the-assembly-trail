<Window x:Class="Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="395" Width="705" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Viewbox Stretch="Uniform" Width="705" Height="400">
        <Canvas Width="705" Height="400" Background="Black">

            <Image Source="/Image/коротше-блакитна-планочка.png" Canvas.Left="96" Canvas.Top="306" Width="124" Height="63" HorizontalAlignment="Center" VerticalAlignment="Top" IsHitTestVisible="False"/>


            <ToggleButton x:Name="CoreStatButton"
              Width="95" Height="31"
              Canvas.Left="111" Canvas.Top="304" 
              HorizontalAlignment="Left" VerticalAlignment="Top">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image x:Name="BtnImage" 
                       Source="/Image/Button-Blue-Off.png" 
                       Stretch="Fill" Margin="-7,6,7,-6"/>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Image/Button-Blue-On.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
            <Button x:Name="YesButton"
        Width="100" Height="48"
        Canvas.Left="485" Canvas.Top="206" 
        HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image Source="/Image/Button-Green-On.png" Stretch="Fill"/>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="NoButton"
        Width="102" Height="48"
        Canvas.Left="489" Canvas.Top="233" 
        HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image Source="/Image/Button-Red-On.png" Stretch="Fill"/>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Image Source="/Image/panel-bg-with-holes-2.png" 
       Width="705" Height="400" 
       Canvas.Left="0" Canvas.Top="0" 
       Stretch="Fill"
       IsHitTestVisible="False"
       />
            <TextBox x:Name="InputTextBox"
                Width="131"
                Height="78"
                Background="Black"
                Foreground="Lime"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20.0"
                FontFamily="OCR A Extended"
                TextWrapping="Wrap"
                BorderThickness="0"
                Padding="2"
                IsReadOnly="False"
                FocusVisualStyle="{x:Null}"
                RenderTransformOrigin="0.5,0.5"
                CaretBrush="Lime"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="Aliased" Canvas.Left="469" Canvas.Top="105">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.17"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

            <TextBox x:Name="StoryTextBox"
                     Width="260" Height="187"
                     Canvas.Left="169" Canvas.Top="94"
                     Background="Black" Foreground="Lime"
                     FontFamily="OCR A Extended"
                     TextWrapping="Wrap"
                     BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Top"
                     >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                        <SkewTransform AngleX="-4.103"/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

        </Canvas>
    </Viewbox>
</Window>