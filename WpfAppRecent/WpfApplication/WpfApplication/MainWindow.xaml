<Window x:Class="Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="790" Width="1410" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Viewbox Stretch="Uniform" Width="1410" Height="800">
        <Canvas Width="1410" Height="800" Background="Black">

            <Image Source="/Image/it_was_ukrainian.png" Canvas.Left="182" Canvas.Top="597" Width="248" Height="63" HorizontalAlignment="Center" VerticalAlignment="Top" IsHitTestVisible="False"/>

            <ToggleButton x:Name="CoreStatButton"
              Width="190" Height="62"
              Canvas.Left="214" Canvas.Top="614" 
              HorizontalAlignment="Center" VerticalAlignment="Top"
              Click="BenchmarkSwitch" >
                <ToggleButton.Template>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image x:Name="BtnImage" 
                       Source="/Image/Button-Blue-Off.png" 
                       Stretch="Fill" Margin="-7,6,7,-6"/>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Image/Button-Blue-On.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
            <Button x:Name="YesButton"
        Width="200" Height="96"
        Canvas.Left="969" Canvas.Top="410" 
        HorizontalAlignment="Left" VerticalAlignment="Center"
        Click="Confirm_Main_Loop"       
             >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image Source="/Image/Button-Green-On.png" Stretch="Fill"/>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="NoButton" 
        Width="204" Height="96"
        Canvas.Left="977" Canvas.Top="465" 
        HorizontalAlignment="Left" VerticalAlignment="Center"
        Click="Refuse_Main_Loop"
        >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="ButtonContent">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" x:Name="PositionTransform"/>
                            </Grid.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="3" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PositionTransform" 
                                                 Storyboard.TargetProperty="Y" 
                                                 To="5" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image Source="/Image/Button-Red-On.png" Stretch="Fill"/>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Image Source="/Image/panel-bg-with-holes-2.png" 
       Width="1410" Height="800" 
       Canvas.Left="-1" Canvas.Top="0" 
       Stretch="Fill"
       IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center"
       />
            <TextBox x:Name="StoryTextBox"
                     
                     Width="524" Height="366"
                     Canvas.Left="335" Canvas.Top="199"
                     Background="Black" Foreground="Lime"
                     FontSize="15.0"
                     FontFamily="OCR A Extended"
                     TextWrapping="Wrap"
                     
                     BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.072,0.013"
                     TextChanged="Text_Changed"
                     >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                        <SkewTransform AngleX="-1.103"/>
                        <RotateTransform Angle="0.205"/>
                        <TranslateTransform X="-0.054" Y="0.072"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBox x:Name="InputTextBox"
                Width="262"
                Height="156"
                Background="Black"
                Foreground="Lime"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20.0"
                FontFamily="OCR A Extended"
                TextWrapping="Wrap"
                BorderThickness="0"
                Padding="2"
                IsReadOnly="False"
                FocusVisualStyle="{x:Null}"
                RenderTransformOrigin="0.5,0.5"
                CaretBrush="Lime"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="Aliased" Canvas.Left="935" Canvas.Top="205">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.17"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

        </Canvas>
    </Viewbox>
</Window>