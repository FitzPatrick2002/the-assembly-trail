<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="705"
        Background="#FFD1DC">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <StackPanel Margin="10" Orientation="Vertical" Width="500">

                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Label>A:</Label>
                    <TextBox Width="80" Name="txtA" Margin="10,0"/>
                    <Label>+ B:</Label>
                    <TextBox Width="80" Name="txtB" Margin="10,0"/>
                    <Label>=</Label>
                    <Button Content="Sum" Click="Button_Click"/>
                    <TextBox Width="160" Name="Result" Margin="10,0"/>
                </StackPanel>
                <Label>Weighted sum:</Label>
                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">

                    <Label>Double A:</Label>
                    <TextBox Width="80" Name="DoubleA" Margin="10,0"/>
                    <Label>Weight A:</Label>
                    <TextBox Width="80" Name="IntA" Margin="10,0"/>
                </StackPanel>

                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Label>Double B:</Label>
                    <TextBox Width="80" Name="DoubleB" Margin="10,0"/>
                    <Label>Weight B:</Label>
                    <TextBox Width="80" Name="IntB" Margin="10,0"/>
                </StackPanel>

                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Label>Double C:</Label>
                    <TextBox Width="80" Name="DoubleC" Margin="10,0"/>
                    <Label>Weight C:</Label>
                    <TextBox Width="80" Name="IntC" Margin="10,0"/>
                </StackPanel>

                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Label>Double D:</Label>
                    <TextBox Width="80" Name="DoubleD" Margin="10,0"/>
                    <Label>Weight D:</Label>
                    <TextBox Width="80" Name="IntD" Margin="10,0"/>
                </StackPanel>

                <StackPanel Margin="10" HorizontalAlignment="Left" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Label>=</Label>
                    <Button Content="Weighted Average" Click="Weighted_Average"/>
                    <TextBox Width="160" Name="ResultWeight" Margin="10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="-20,30" Orientation="Vertical" Width="200">
                <Image Source="pack://application:,,,/Image/seal.png" Width="100" Height="200" RenderTransformOrigin="0,0"/>
                <Label Margin="0" RenderTransformOrigin="0,0" Height="30" Content="Happy Seal of Asembler" Width="140"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
