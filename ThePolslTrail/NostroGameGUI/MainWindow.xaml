<Window x:Class="NostroGameGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NostroGameGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="/panel-bg.png" Stretch="Fill"/>
        <!-- Story Output -->
        <TextBox x:Name="StoryTextBox"
                 Margin="141,85,290,123"
                 Background="Black"
                 Foreground="Lime"
                 FontFamily="Consolas"
                 FontSize="18"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 Panel.ZIndex="1"/>

        <TextBox x:Name="InputTextBox"
                 Width="180"
                 Height="130"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Margin="0,0,96,217"
                 FontSize="16"
                 Panel.ZIndex="1" RenderTransformOrigin="0.279,-0.679"/>

        <!-- YES Button -->
        <Button x:Name="YesButton"
                Width="150"
                Height="31"
                Background="Green"
                Foreground="Black"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="539,0,0,170"
                Click="YesButton_Click"
                Panel.ZIndex="1">
            <Image Height="31" Source="/Button-Green-On.png" Stretch="Fill" Width="160"/>
        </Button>
        <!-- NO Button -->
        <Button x:Name="NoButton"
                Width="150"
                Height="42"
                Background="DarkRed"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="540,0,0,123"
                Click="NoButton_Click"
                Panel.ZIndex="1">
            <Image Height="38" Source="/Button-Red-On.png" Stretch="Fill" Width="142" RenderTransformOrigin="0.499,0.102"/>
        </Button>
    </Grid>
</Window>
