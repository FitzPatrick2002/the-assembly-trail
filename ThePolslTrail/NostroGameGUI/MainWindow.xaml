<Window x:Class="NostroGameGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NostroGameGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Story Output -->
        <TextBox x:Name="StoryTextBox"
         Margin="182,107,316,134"
         Background="Black"
         Foreground="Lime"
         FontFamily="OCR A Extended"
         FontSize="12"
         TextWrapping="Wrap"
         IsReadOnly="True"
         BorderThickness="0"
         Padding="2"
         Panel.ZIndex="1"
         FocusVisualStyle="{x:Null}"
         CaretBrush="Lime"
         TextOptions.TextFormattingMode="Display"
         TextOptions.TextRenderingMode="Aliased"
         RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <!-- subtle tilt for retro CRT look -->
                <RotateTransform Angle="1.75"/>
            </TextBox.RenderTransform>
        </TextBox>


        <Image Source="/panel-bg.png" Stretch="Fill" Margin="0,-10,-10,0"/>

        <TextBox x:Name="InputTextBox"
         Width="149"
         Height="92"
         Background="Black"
         Foreground="Lime"
         HorizontalAlignment="Right"
         VerticalAlignment="Bottom"
         Margin="0,0,117,242"
         FontSize="3.5"
         FontFamily="OCR A Extended"
         TextWrapping="NoWrap"
         BorderThickness="0"
         Padding="2"
         IsReadOnly="True"
         Panel.ZIndex="1"
         FocusVisualStyle="{x:Null}"
         RenderTransformOrigin="0.5,0.5"
         CaretBrush="Lime"
         TextOptions.TextFormattingMode="Display"
         TextOptions.TextRenderingMode="Aliased">
            <TextBox.RenderTransform>
                <RotateTransform Angle="-2"/>
            </TextBox.RenderTransform>
        </TextBox>


        <!-- YES Button -->
        <Button x:Name="YesButton"
                Width="130"
                Height="31"
                Background="Transparent"
                Foreground="Black"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="559,0,0,170"
                Click="YesButton_Click"
                Panel.ZIndex="1"/>
        <!-- NO Button -->
        <Button x:Name="NoButton"
                Width="131"
                Height="27"
                Background="Transparent"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="559,0,0,138"
                Click="NoButton_Click"
                Panel.ZIndex="1"/>
        <Image Margin="112,339,569,64" Source="/Button-Blue-On.png" Stretch="Fill"/>
        <Image Margin="598,269,100,117" Source="/Button-Red-Off.png" Stretch="Fill"/>
    </Grid>
</Window>
